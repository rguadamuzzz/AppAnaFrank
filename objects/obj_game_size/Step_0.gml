// This handles displaying the currently selected game size
switch(global.game_size)
{
	case 3:
		sprite_index = spr_size_3x3;
		image_index = 0;
	
		break;

	case 4:
		sprite_index = spr_size_4x4;
		image_index = 0;
	
		break;

	case 5:
		sprite_index = spr_size_5x5;
		image_index = 0;
	
		break;
}